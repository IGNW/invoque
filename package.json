  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/micro": "^7.3.3",
    "@types/node": "^12.7.2",
    "@types/supertest": "^2.0.8",
    "@types/yargs": "^13.0.2",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "supertest": "^4.0.2",
